<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".UI.Store.newProduct"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:text="הוספת מוצר"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:layout_width="295dp"
                android:layout_height="71dp">

            </TextView>

            <Spinner

                android:id="@+id/fitsSpinner"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/situationSpinner"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="15dp"/>

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/tvInfo"
                android:layout_marginTop="15dp"
                android:layout_width="339dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:gravity="center"
                android:textSize="25dp"
                android:maxLength="100"
                android:hint="תיאור המוצר"></EditText>
            <EditText
                android:id="@+id/etPrice"
                android:layout_marginTop="15dp"
                android:layout_width="339dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColorHint="#785043"
                android:textColor="#785043"
                android:backgroundTint="#785043"
                android:textSize="25dp"
                android:inputType="numberDecimal"
                android:hint="מחיר המוצר"></EditText>

            <ImageView
                android:id="@+id/btnImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"

                android:src="@drawable/camera" />


            <Button
                android:id="@+id/btnSend"
                android:textSize="25dp"
                android:layout_width="145dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="#ECE7E5"
                android:background="@drawable/rounded"
                android:text="שלח"></Button>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="145dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded"
                android:gravity="center"
                android:text="בטל"
                android:textColor="#ECE7E5"
                android:textColorHint="#785043"
                android:textSize="25dp"></Button>


        </LinearLayout>

    </ScrollView>


</LinearLayout>