<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5DC"
    tools:context=".UI.Register.RegisterActivity">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:src="@drawable/logonew2" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:hint="שם מלא"
        android:inputType="textPersonName"
        android:backgroundTint="#785043"
        android:padding="12dp"
        android:textColor="#785043"
        android:textColorHint="#785043"
        android:maxLength="10"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:hint="איימיל"
        android:textColorHint="#785043"
        android:maxLength="30"
        android:textColor="#785043"
        android:backgroundTint="#785043"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:textColorHint="#785043"
        android:textColor="#785043"
        android:gravity="right"
        android:layout_width="366dp"
        android:maxLength="15"
        android:layout_height="44dp"
        android:hint="סיסמא"
        android:backgroundTint="#785043"
        android:inputType="textPassword"

        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editTextPasswordConfirmation"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:gravity="right"
        android:textColorHint="#785043"
        android:textColor="#785043"
        android:maxLength="15"
        android:hint="אישור סיסמא"
        android:inputType="textPassword"
        android:backgroundTint="#785043"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:gravity="right"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#785043"
        android:hint="מספר טלפון"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="12dp"
        android:textColor="#785043"
        android:textColorHint="#785043" />

    <EditText
        android:id="@+id/editTextAddress"
        android:gravity="right"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#785043"
        android:hint="כתובת"
        android:maxLength="25"
        android:inputType="textPostalAddress"
        android:padding="12dp"
        android:textColor="#785043"
        android:textColorHint="#785043" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יש לך כבר משתמש ? לחץ כאן כדי להתחבר"
        android:layout_marginBottom="24dp"
        android:textSize="14dp"
        android:clickable="true"
        android:textColor="#785043"
        />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded"
        android:padding="16dp"
        android:text="התחבר"
        android:textColor="#DCD2D2" />

</LinearLayout>